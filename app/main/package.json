{
	"name": "pomatez",
	"version": "1.1.0",
	"private": true,
	"license": "MIT",
	"main": "./build/main.js",
	"author": {
		"name": "Subbu Lakshmanan",
		"email": "subbramanil@gmail.com",
		"url": "https://github.com/subbramanil"
	},
	"repository": "https://github.com/subbramanil/pomatez",
	"description": "A Minimal pomodoro timer for Windows, Mac, and Linux.",
	"scripts": {
		"prepare": "yarn build",
		"clean": "rimraf dist/ build/",
		"predev:main": "wait-on http://localhost:3000",
		"dev:main": "yarn build && electron .",
		"start": "yarn dev:main",
		"build": "tsc && cp -r src/assets build/",
		"build:mwl": "electron-builder -mwl",
		"build:dir": "electron-builder --dir",
		"build:win": "electron-builder --win",
		"build:mac": "electron-builder --mac",
		"build:linux": "electron-builder --linux",
		"build:snap": "electron-builder --linux snap",
		"release:mw": "electron-builder --publish always --mac --win",
		"release": "electron-builder --publish always"
	},
	"build": {
		"productName": "Pomatez",
		"appId": "com.subbramanil.pomatez",
		"copyright": "Copyright Â© 2020 ${author}",
		"files": [
			"build"
		],
		"mac": {
			"artifactName": "Pomatez-v${version}-mac.${ext}",
			"category": "public.app-category.productivity",
			"icon": "./src/assets/logo-dark@2x.png"
		},
		"win": {
			"target": [
				{
					"target": "portable",
					"arch": [
						"x64",
						"ia32"
					]
				},
				{
					"target": "nsis",
					"arch": [
						"x64",
						"ia32"
					]
				}
			],
			"icon": "./src/assets/logo-dark.ico"
		},
		"portable": {
			"artifactName": "Pomatez-v${version}-portable.${ext}"
		},
		"nsis": {
			"artifactName": "Pomatez-v${version}-setup.${ext}"
		},
		"linux": {
			"artifactName": "Pomatez-v${version}-linux.${ext}",
			"target": [
				"AppImage",
				"deb",
				"rpm"
			],
			"icon": "./src/assets/logo-dark.png",
			"category": "Utility"
		},
		"snap": {
			"category": "Productivity"
		}
	},
	"dependencies": {
		"@pomatez/shareables": "^1.0.0",
		"electron-log": "^4.2.4",
		"electron-store": "^6.0.0",
		"electron-updater": "^4.3.4",
		"lodash.debounce": "^4.0.8",
		"node-notifier": "^8.0.0",
		"universal-analytics": "^0.4.23",
		"uuid": "^8.3.0",
		"v8-compile-cache": "^2.1.1"
	},
	"devDependencies": {
		"@types/lodash.debounce": "^4.0.6",
		"@types/node-notifier": "^6.0.1",
		"@types/universal-analytics": "^0.4.4",
		"@types/uuid": "^8.3.0",
		"electron": "10.1.5",
		"electron-builder": "^22.8.0"
	}
}
